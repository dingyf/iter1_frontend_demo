<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up!"
            android:id="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textSize="17dp" android:layout_above="@+id/username"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Email: "
            android:id="@+id/textView1"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/textView" android:layout_alignParentTop="true"
            android:layout_marginTop="65dp" android:layout_alignRight="@+id/textView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/textView1" android:layout_alignTop="@+id/textView1"
            android:layout_alignRight="@+id/password"/>
    <TextView android:layout_width="wrap_content" android:layout_height="24dp" android:text="Password: "
              android:id="@+id/textView2" android:textSize="20dp"
              android:layout_alignLeft="@+id/textView" android:layout_alignParentTop="true"
              android:layout_marginTop="123dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/password" android:layout_toRightOf="@+id/textView1"
            android:layout_alignTop="@+id/textView2" android:password="true"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:id="@+id/button"
            android:onClick="sign_up"
            android:layout_alignLeft="@+id/textView" android:layout_alignParentBottom="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password2" android:layout_toRightOf="@+id/textView1" android:layout_centerVertical="true"
            android:layout_alignRight="@+id/username"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Password Confirm"
            android:id="@+id/textView3" android:layout_alignLeft="@+id/textView"
            android:layout_alignTop="@+id/password2" android:textSize="20dp" android:layout_alignRight="@+id/textView1"/>

</RelativeLayout>